{
  "name": "signalk-units-preference",
  "version": "0.7.3-beta.3",
  "description": "SignalK webapp/utility for managing path value/unit conversions and display preferences",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.esm.js",
      "require": "./dist/client/index.js"
    }
  },
  "scripts": {
    "build": "npm run build:server && npm run build:client && npm run copy:client",
    "build:server": "tsc",
    "build:client": "rollup -c",
    "copy:client": "mkdir -p public/lib && cp dist/client/sk-unit-converter.umd.min.js public/lib/ && cp dist/client/sk-unit-converter.umd.min.js.map public/lib/",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "dev": "npm run build && npm run watch",
    "lint": "eslint \"{src,public}/**/*.{ts,js}\"",
    "format": "prettier --write \"{src,public}/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"{src,public}/**/*.{ts,js,json}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "explore:units": "tsc scripts/explore-js-quantities.ts --outDir dist/scripts --moduleResolution node --esModuleInterop && node dist/scripts/scripts/explore-js-quantities.js",
    "validate:units": "tsc scripts/validate-and-enhance-units.ts --outDir dist/scripts --moduleResolution node --esModuleInterop && node dist/scripts/scripts/validate-and-enhance-units.js",
    "update:json": "tsc scripts/update-json-formulas.ts --outDir dist/scripts --moduleResolution node --esModuleInterop && node dist/scripts/scripts/update-json-formulas.js"
  },
  "keywords": [
    "signalk-node-server-plugin",
    "signalk-category-utility",
    "signalk-webapp",
    "unit converter",
    "signalk-target units",
    "signalk-preferences"
  ],
  "author": "Maurice Tamman",
  "license": "MIT",
  "contributors": [
    "Maurice Tamman <maurice@tamman.org>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/motamman/signalk-units-preference.git"
  },
  "bugs": {
    "url": "https://github.com/motamman/signalk-units-preference/issues"
  },
  "homepage": "https://github.com/motamman/signalk-units-preference#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.js.map",
    "dist/**/*.d.ts.map",
    "!dist/**/*.test.*",
    "!dist/__tests__",
    "src/**/*",
    "!src/__tests__",
    "public/**/*",
    "presets/**/*",
    "!presets/custom/",
    "tsconfig.json",
    "README.md",
    "LICENSE"
  ],
  "signalk": {
    "appSupport": "webapp",
    "compatibility": ">=2.15.0",
    "displayName": "Units Display Selector",
    "appIcon": "units.png"
  },
  "dependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/archiver": "^6.0.3",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "express": "^4.18.2",
    "mathjs": "^14.8.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.9",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@signalk/server-api": "^2.8.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/js-quantities": "^1.6.6",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "jest": "^30.2.0",
    "js-quantities": "^1.8.0",
    "prettier": "^3.6.2",
    "rollup": "^4.52.5",
    "ts-jest": "^29.4.4",
    "tslib": "^2.8.1",
    "typescript": "^5.3.0"
  },
  "signalk-plugin-enabled-by-default": true
}
